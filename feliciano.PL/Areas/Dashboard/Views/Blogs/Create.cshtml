@model BlogVM

@section Header {
    CREATE BLOG
}
<div class="col-md-6 ms-4">
    <div class="card card-primary">
        <div class="card-header bg-dark">
            <h3 class="card-title">Create</h3>
        </div>

        <form asp-controller="Blogs" asp-action="Create" id="CreateBlogForm" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter Blog Title" />
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                </div>
                <div class="form-group">
                    <label asp-for="CreateAt">CreateAt</label>
                    <input asp-for="CreateAt" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Image">Image</label>
                    <input asp-for="Image" class="form-control-file Image" >
                </div>
                <div class="form-group">
                    <img src="#" class="ImagePreview" style="display:none" width="80px"/>
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-dark btn">Create</button>
            </div>
        </form>
    </div>
</div>

@section script {
    <script>
        document.querySelector(".Image").addEventListener("change", (e) => {
            //without files it give the tag
            const file = e.target.files[0];
            const ImagePreview = document.querySelector(".ImagePreview");
            if (file) {
                // to get the file we work it 
                const reder = new FileReader();
                reder.onload = function (ee) {
                    //inside the ee.target we hane an information about the image

                    ImagePreview.src = ee.target.result;
                    ImagePreview.style.display = "block";
                }
                //هاد السطر عشان الفنكشن لنا نعمل لود يشتغل 
                reder.readAsDataURL(file);
            }
            console.log(e.target.files);
        })
    </script>
}
